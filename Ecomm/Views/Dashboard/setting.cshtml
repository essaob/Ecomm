@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SiteInfo

<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Website Settings</h5>

                    <!-- No Labels Form -->
                    <form class="row g-3" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="col-md-12">
                            <label asp-for="WebsiteName"></label>
                            <input type="text" class="form-control" asp-for="WebsiteName">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EmailAddress"></label>
                            <input type="email" class="form-control" asp-for="EmailAddress">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PhoneNumber"></label>
                            <input type="text" class="form-control" asp-for="PhoneNumber">
                        </div>
                    
                        <div class="col-12">
                            <label asp-for="Address"></label>
                            <input type="text" class="form-control" asp-for="Address">
                        </div>
                     
                       
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form><!-- End No Labels Form -->

                </div>
            </div>

        </div>
    </div>
</section>
