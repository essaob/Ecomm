 @model List<Cart>
@{
    decimal total = 0;
}
<section class="py-5">
    <div class="container">
        <h2 class="mb-4">Your Cart</h2>
        <div class="row">
            <div class="col-lg-12">
                <div class="card mb-3">
                    <div class="card-body">
                        @if (Model != null && Model.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                               
                                var total_price = item.Product.Price * item.Quantity;
                                total = total + (decimal)total_price;
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex gap-2">
                                        <div>
                                            <img width="60" src="@item.Product.ImageUrl" alt="@item.Product.Title" />
                                        </div>
                                        <div>
                                            <h5 class="card-title">@item.Product.Title</h5>
                                            <p class="card-text">Price: @item.Product.Price.ToString("C") x @item.Quantity</p>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3 d-flex justify-content-center" style="max-width: 200px;">
                                        <a asp-controller="Cart" asp-action="Minus" asp-route-cartId="@item.Product.Id" class="btn btn-outline-secondary">-</a>
                                        <input name="quantity" readonly type="text" class="form-control text-center" value="@item.Quantity">
                                        <a asp-controller="Cart" asp-action="Plus" asp-route-cartId="@item.Product.Id" class="btn btn-outline-secondary">+</a>
                                    </div>
                                    <a asp-controller="Cart" asp-action="Remove" asp-route-cartId="@item.Product.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Remove</a>
                                </div>
                            }
                        }
                    </div>
                    <div class="card d-flex justify-content-around">
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Total</span>
                                <strong>@total.ToString("C")</strong>
                            </li>
                        </ul>
                        <div class="text-end pb-2 pe-2">
                            <a asp-controller="Home" class="btn btn-info btn-sm btn-block">Continue Shopping</a>
                            <a asp-action="Summary" class="btn btn-primary btn-sm btn-block">Summary</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
