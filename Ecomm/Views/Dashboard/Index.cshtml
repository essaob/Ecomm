@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="section">
    <div class="row">
        <div class="col-lg-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Order</h5>

                    <h3>
                      
                        @ViewBag.OrderTotal
                 </h3>

                </div>
            </div>

        </div>
        <div class="col-lg-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Categories</h5>

                    <h3>
                      
                        @ViewBag.CategoryTotal
                 </h3>

                </div>
            </div>

        </div>
        <div class="col-lg-4">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Products</h5>

                    <h3>
                      
                        @ViewBag.ProductTotal
                 </h3>

                </div>
            </div>

        </div>
    </div>
</section>