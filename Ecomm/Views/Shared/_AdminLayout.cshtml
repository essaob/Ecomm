<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Admin</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/admin/img/favicon.png" rel="icon">
    <link href="~/admin/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.min.css" />
    <!-- Template Main CSS File -->
    <link href="~/admin/css/style.css" rel="stylesheet">

</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a asp-action="Index" asp-controller="Dashboard" class="logo d-flex align-items-center">
                <img src="~/admin/img/logo.png" alt="">
                <span class="d-none d-lg-block">Ecomm</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->
        <div class="">
            <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-primary">Visit Website</a>
        </div><!-- End Search Bar -->
   
      

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link collapsed" asp-action="Index" asp-controller="Dashboard">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li>

         
            <li class="nav-item">
                <a class="nav-link" asp-controller="Product" asp-action="Index">

                    <i class="bi bi-backpack"></i>
                    <span>Products</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-controller="Category" asp-action="Index">
                    <i class="bi bi-bookmark-plus"></i>
                    <span>Category</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Order" asp-action="Index">
                    <i class="bi bi-box"></i>
                    <span>Order</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Setting">
                    <i class="bi bi-gear"></i>
                    <span>Settings</span>
                </a>
            </li>
          
        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">
        <partial name="_Notifications" />
        @RenderBody()


    </main><!-- End #main -->
  
    <!-- Vendor JS Files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdn.datatables.net/2.0.3/js/dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/admin/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>